.right {
  display: flex;
  margin: 0 0 20rpx 0;
  padding: 10rpx 20rpx;
  justify-content: space-around;
  border-top: 4rpx solid hsla(0, 0%, 96%, 0.856);
}
.show{
  text-align: center;
  margin: 300rpx auto;
}
.show button{
  margin: 40rpx auto;
  background: orangered;
  color: #fff;
}
.right image {
  width: 170rpx;
  height: 170rpx;
}

.right view image {
  width: 45rpx;
  height: 45rpx;
}

.tt2 {
  display: flex;
  justify-content: space-between;
}

.acc {
  width: 450rpx;
}

.red {
  color: rgb(245, 61, 61);
  font-weight: 600;
}

.bottom {
  width: 100%;
  display: flex;
  padding: 0 0 0 20rpx;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  justify-content: space-between;
  border-top: 4rpx solid hsla(0, 0%, 96%, 0.856);
  background: #fff;
}

.bottom button {
  width: 35%;
  height: 100%;
  border-radius: none;
  background: red;
  color: #fff;
  margin: 0;
  padding: 0;
}

.tt {
  width: 420rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
