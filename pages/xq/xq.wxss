.item {
  width: 100%;
  height: 680rpx;
}

.ong image {
  width: 50rpx;
  height: 50rpx;
}

.box {
  padding: 10rpx 30rpx;
  border-bottom: 24rpx solid hsla(0, 0%, 96%, 0.856);
}

.cc {
  text-decoration: line-through;
  color: grey;
  font-size: 26rpx;
}
.ff{
  display: flex;
  justify-content: space-between;
}
.nn{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    word-break: break-all;
    font-size: 30rpx;
}
.acc{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid hsla(0, 0%, 96%, 0.856);
}
.bottom{
  background: #fff;
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  border-top: 4rpx solid hsla(0, 0%, 96%, 0.856);
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.bottom image{
  width: 68rpx;
  height: 60rpx;
  margin-left: 10rpx;
  border-radius: none;
}
.btn1{
  background: orangered;
  color: #fff;
  height: 100%;
  width: 260rpx;
  font-size: 35rpx;
}
.btn2{
  color: #fff;
  background: red;
  width:260rpx;
  height: 100%;
  font-size: 35rpx;
}
.commodity_attr_box {
  background: #f4f4f4;
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.right {
  display: flex;
  margin:0 0 20rpx 0;
  justify-content: space-between;
  border-top: 4rpx solid hsla(0, 0%, 96%, 0.856);
}
.right image{
  width: 170rpx;
  height: 170rpx;
}
.right view image{
  width: 45rpx;
  height: 45rpx;
}
.tt2{
