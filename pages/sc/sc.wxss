/* pages/sc/sc.wxss */
page{
  min-height: 100%;
  background-color: #F2f2f2;
}
.weui-loadmore_line {
 border-top: 1px solid rgba(0,0,0,.1);
  margin-top: 2.4em;
  
  }
  .weui-loadmore {
 width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
  
  }
  .weui-loadmore__tips_in-line {
    position: relative;
    top: -.9em;
    padding: 0 .55em;
    background-color: #fff;
    color: rgba(0,0,0,.5);
    
    }
    .weui-loadmore__tips {
    display: inline-block;
    vertical-align: middle;
    
    }
.ul{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}
.li{
  margin: 16rpx 0;
width: 350rpx;
background: #fff;
border-radius: 30rpx;
overflow: hidden;
margin-left: 20rpx;
}
.t1{
  width: 100%;
}
.t1 image{
  width: 100%;
  height: 350rpx;  
}
.t2{
  color: #333;
font-size: 26rpx;
padding-left: 16rpx;
text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}
.t3 image{
  width: 55rpx;
height: 55rpx;
margin: auto;
margin-top: 32rpx;

}
.t3{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}
  