    overflow: hidden;
    word-break: break-all;
}
.add{
  width: 100%;
  background: rgb(245, 61, 61);
  color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
}
.sul{
  height: 100rpx;
  line-height:  100rpx;
